<?xml version="1.0"?>
<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Object Mapping DTD Version 1.0//EN" "http://castor.exolab.org/mapping.dtd">
<mapping>
    <class name="com.accenture.core.model.fielddef.FieldDefinition">
        <map-to xml="field"/>

        <field name="name" type="string">
            <bind-xml name ="name" node="attribute"/>
        </field>
        <field name="type" type="string">
            <bind-xml name ="type" node="attribute"/>
        </field>
        <field name="sequence" type="string">
            <bind-xml name ="sequence" node="attribute"/>
        </field>
        <field name="format" type="string">
            <bind-xml name ="format" node="attribute"/>
        </field>
        <field name="maxlen" type="integer">
            <bind-xml name ="maxlen" node="attribute"/>
        </field>
        <field name="ispercent" type="boolean">
            <bind-xml name ="ispercent" node="attribute"/>
        </field>
        <field name="mapkey" type="string">
            <bind-xml name ="mapkey" node="attribute"/>
        </field>
        <field name="id" type="string">
            <bind-xml name ="id" node="attribute"/>
        </field>
        <field name="childtype" type="string">
            <bind-xml name ="childtype" node="attribute"/>
        </field>
        <field name="childtypeMapping" type="string">
            <bind-xml name ="childtypeMapping" node="attribute"/>
        </field>
    </class>

    <class name="com.accenture.core.model.fielddef.FieldDefinitionList">
        <map-to xml="fieldDefs"/>
        <field name="field" type="com.accenture.core.model.fielddef.FieldDefinition" collection="arraylist">
            <bind-xml name="field"/>
        </field>
    </class>

</mapping>